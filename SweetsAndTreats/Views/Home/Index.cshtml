@{
  Layout = "_Layout";
}

@using SweetsAndTreats.Models;

<div id="carouselExampleCaptions" class="carousel slide">

  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/food2.jpg" class="d-block w-50" alt="ice cream sundae">
      <div class="carousel-caption d-none d-md-block">
        <h5>Ice Cream Sundae</h5>
      </div>
    </div>

    <div class="carousel-item">
      <img src="~/food3.jpg" class="d-block w-50" alt="waffles with berry compote">
      <div class="carousel-caption d-none d-md-block">
        <h5>Waffles with Berry Compote</h5>
      </div>
    </div>

    <div class="carousel-item">
      <img src="~/food4.jpg" class="d-block w-50" alt="mille feuille">
      <div class="carousel-caption d-none d-md-block">
        <h5>Mille Feuille</h5>
      </div>
    </div>

    <div class="carousel-item">
      <img src="~/food5.jpg" class="d-block w-50" alt="caramel peanut ice cream cake">
      <div class="carousel-caption d-none d-md-block">
        <h5>Caramel Peanut Ice Cream Cake</h5>
      </div>
    </div>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<h1 id="header">Welcome Pierre's Sweet and Savory Treats</h1>
<hr>
<h4>Treats</h4>
<div class="box">
@if (Model["treats"].Length == 0)
{
  <p>No treats have been added yet!</p>
} 
<ul>
  @foreach (Treat treat in Model["treats"])
  {
    <li>@Html.ActionLink(@treat.TreatName, "Details", "Treats", new { id = @treat.TreatId})</li>
  }
</ul>
</div>
<hr>
<h4>Flavors</h4>
<div class="box">
  @if (Model["flavors"].Length == 0)
  {
    <p>No flavors have been added yet!</p>
  } 
  <ul>
    @foreach (Flavor flav in Model["flavors"])
    {
      <li>@Html.ActionLink(@flav.FlavorName, "Details", "Flavors", new { id = @flav.FlavorId})</li>
    }
  </ul>
</div>
<hr>
@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  <p>@Html.ActionLink("View my flavors", "MyFlavors", "Flavors")</p>
  <p>@Html.ActionLink("View my treats", "MyTreats","Treats")</p>
}